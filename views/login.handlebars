<div class="signup__container">
  <div class="container__child signup__thumbnail">
    <div class="thumbnail__logo">
      <div class="logo__shape" width="25px"><i class="fas fa-globe-americas"></i>
        <span>
          <h1 class="logo__text">Now&Then</h1>
        </span>
      </div>
    </div>
    <div class="signup__overlay"></div>
  </div>

  {{!-- SIGNUP FORM --}}
  <div class="container__child signup__form">
    <form action="#">
      <div class="text text-center">Welcome to your very own time portal</div>
      <div class="form-group">
        <label for="email">Email</label>
        <input class="form-control" type="text" name="email" id="email">
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input class="form-control" type="password" name="password" id="password" placeholder="********">
      </div>
      {{!-- <div class="form-group">
        <label for="passwordRepeat">Repeat Password</label>
        <input class="form-control" type="password" name="passwordRepeat" id="passwordRepeat" placeholder="********">
      </div> --}}
      <div class="m-t-lg">
        <ul class="list-inline">
          <li id="submit-btn">
            <input class="btn btn--form" type="submit" value="Register" />
          </li>
          <li id="signup-link">
            <a class="signin__link" href="#" id="show_signin">I am already a member</a>
          </li>
        </ul>
      </div>
    </form>
  </div>

  {{!-- SIGNIN FORM --}}
  <div class="container__child signin__form">
    <form action="#">
      <div class="text text-center">Welcome back!</div>
      <div class="form-group">
        <label for="email">Email</label>
        <input class="form-control" type="text" name="email" id="email">
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input class="form-control" type="password" name="password" id="password" placeholder="********">
      </div>
      <div class="m-t-lg">
        <ul class="list-inline">
          <li id="submit-btn">
            <input class="btn btn--form" type="submit" value="Login" />
          </li>
          <li id="signup-link">
            <a class="signup__link" href="#" id="show_signup">Help, I am not a member</a>
          </li>
        </ul>
      </div>
    </form>
  </div>

</div>